{% macro post_title(title, url, created, small = talse) %}
  {% set desktop_level = 4 if small else 3 %}
  {% set mobile_level = desktop_level + 1 %}

  <a class="post-title-link" href="{{ url }}">
    <h1 class="if-not-mobile post-title mdc-typography--headline{{desktop_level}}">
      {{ title }}
    </h1>

    <h1 class="if-mobile post-title mdc-typography--headline{{mobile_level}}">
      {{ title }}
    </h1>
  </a>

  <p class="post-subheader">
    Created on {{created}} - <a href="{{ url }}#comments">Comments</a>
  </p>
{% endmacro %}
